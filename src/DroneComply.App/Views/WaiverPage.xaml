<Page
    x:Class="DroneComply.App.Views.WaiverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DroneComply.Core.Models"
    mc:Ignorable="d">
    <Grid Padding="24" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Spacing="12">
            <TextBlock Text="Waivers" FontSize="24" FontWeight="SemiBold" />
            <Button Content="Load" Command="{Binding LoadCommand}" />
            <ListView ItemsSource="{Binding Waivers}" SelectedItem="{Binding SelectedWaiver, Mode=TwoWay}" Height="520">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Padding="8" Spacing="4">
                            <TextBlock Text="{Binding ReferenceNumber}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Type}" />
                            <TextBlock Text="{Binding Status}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="12">
            <TextBlock Text="Details" FontSize="24" FontWeight="SemiBold" />
            <TextBox PlaceholderText="Reference" Text="{Binding SelectedWaiver.ReferenceNumber, Mode=TwoWay}" />
            <ComboBox x:Name="StatusCombo" SelectedItem="{Binding SelectedWaiver.Status, Mode=TwoWay}" />
            <DatePicker Date="{Binding SelectedWaiver.SubmittedOn, Mode=TwoWay}" />
            <DatePicker Date="{Binding SelectedWaiver.ApprovedOn, Mode=TwoWay}" PlaceholderText="Approved" />
            <DatePicker Date="{Binding SelectedWaiver.ExpirationDate, Mode=TwoWay}" PlaceholderText="Expires" />
            <TextBox PlaceholderText="Description" Text="{Binding SelectedWaiver.Description, Mode=TwoWay}" AcceptsReturn="True" Height="120" TextWrapping="Wrap" />
            <Button Content="Save" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Page>

