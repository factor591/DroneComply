<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DroneComply.App.Views.MaintenancePage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DroneComply.Core.Models"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Maintenance" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,16"/>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Aircraft List -->
            <StackPanel Grid.Column="0" Spacing="12" Margin="0,0,12,0">
                <TextBlock Text="Aircraft" Style="{StaticResource SubtitleTextBlockStyle}"/>

                <ListView ItemsSource="{Binding Aircraft, Mode=OneWay}"
                          SelectedItem="{Binding SelectedAircraft, Mode=TwoWay}"
                          SelectionMode="Single"
                          Height="600">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Aircraft">
                            <Grid Padding="8">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Model}" Foreground="Gray" FontSize="12"/>
                                    <TextBlock Text="{Binding SerialNumber}" Foreground="Gray" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Text="{Binding StatusMessage}" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Maintenance Records and Notes -->
            <Grid Grid.Column="1" Visibility="{Binding SelectedAircraft, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Aircraft Info Header -->
                <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
                    <TextBlock Text="{Binding SelectedAircraft.Name}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Button Content="Add Maintenance Record" Command="{Binding AddMaintenanceRecordCommand}"/>
                </StackPanel>

                <!-- Maintenance Records List and Details -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Maintenance Records List -->
                    <StackPanel Grid.Row="0" Spacing="8">
                        <TextBlock Text="Maintenance Records" FontWeight="SemiBold"/>
                        <ListView ItemsSource="{Binding MaintenanceRecords, Mode=OneWay}"
                                  SelectedItem="{Binding SelectedRecord, Mode=TwoWay}"
                                  Height="150">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:MaintenanceRecord">
                                    <StackPanel Padding="8" Spacing="4">
                                        <TextBlock Text="{Binding Description}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ScheduledDate}" FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Status}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>

                    <!-- Maintenance Record Details -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
                        <StackPanel Spacing="12" Visibility="{Binding SelectedRecord, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="Maintenance Details" FontWeight="SemiBold" FontSize="16"/>

                            <TextBox Header="Description" Text="{Binding SelectedRecord.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Header="Performed By" Text="{Binding SelectedRecord.PerformedBy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Header="Maintenance Notes"
                                     Text="{Binding SelectedRecord.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="200"
                                     PlaceholderText="Enter maintenance notes here..."/>

                            <TextBlock Text="Tasks" FontWeight="SemiBold" Margin="0,16,0,0"/>
                            <ItemsRepeater ItemsSource="{Binding SelectedRecord.Tasks}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="models:MaintenanceTask">
                                        <Border BorderBrush="Gray" BorderThickness="1" Padding="12" Margin="0,4" CornerRadius="4">
                                            <Grid ColumnSpacing="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Spacing="4">
                                                    <CheckBox Content="{Binding Name}"
                                                              IsChecked="{Binding IsCompleted, Mode=OneWay}"
                                                              IsEnabled="False"/>
                                                    <TextBlock Text="{Binding CompletedOn, Converter={StaticResource FormattingConverter}, ConverterParameter='Completed {0:g}'}"
                                                               Foreground="Gray"
                                                               FontSize="12"
                                                               Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="Complete"
                                                        Command="{Binding DataContext.CompleteTaskCommand, ElementName=RootPage}"
                                                        CommandParameter="{Binding}"
                                                        Visibility="{Binding IsCompleted, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>

                            <Button Content="Save"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Command="{Binding SaveMaintenanceRecordCommand}"
                                    CommandParameter="{Binding SelectedRecord, Mode=OneWay}"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>


