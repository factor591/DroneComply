<Page
    x:Class="DroneComply.App.Views.MaintenancePage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DroneComply.Core.Models"
    mc:Ignorable="d">
    <Grid Padding="24" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Spacing="12">
            <TextBlock Text="Maintenance" FontSize="24" FontWeight="SemiBold" />
            <TextBox PlaceholderText="Filter by Aircraft Id" Text="{Binding AircraftFilter, Mode=TwoWay}" />
            <Button Content="Load" Command="{Binding LoadCommand}" />
            <ListView ItemsSource="{Binding MaintenanceRecords}" SelectedItem="{Binding SelectedRecord, Mode=TwoWay}" Height="520">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:MaintenanceRecord">
                        <StackPanel Padding="8" Spacing="4">
                            <TextBlock Text="{Binding Description}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding ScheduledDate, StringFormat='Scheduled {0:g}'}" />
                            <TextBlock Text="{Binding Status}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="12">
            <TextBlock Text="Tasks" FontSize="24" FontWeight="SemiBold" />
            <ListView ItemsSource="{Binding SelectedRecord.Tasks}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:MaintenanceTask">
                        <StackPanel Orientation="Horizontal" Spacing="12" Padding="8">
                            <CheckBox IsChecked="{Binding IsCompleted, Mode=TwoWay}" Content="{Binding Name}" />
                            <Button Content="Complete" Command="{Binding DataContext.CompleteTaskCommand, ElementName=RootPage}" CommandParameter="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
