<Page
    x:Name="Page"
    x:Class="DroneComply.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DroneComply.Core.Models"
    mc:Ignorable="d">
    <Grid Padding="24" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Button Content="Add Mission" Command="{Binding AddMissionCommand}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="N" />
                </Button.KeyboardAccelerators>
            </Button>
            <Button Content="Refresh" Command="{Binding LoadCommand}" />
            <TextBlock Text="Pending approvals:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="12,0,0,0" />
            <TextBlock Text="{Binding PendingApprovalCount}" VerticalAlignment="Center" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,8,0,8" />

            <ListView Grid.Row="1" ItemsSource="{Binding UpcomingMissions}" SelectedItem="{Binding SelectedMission, Mode=TwoWay}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:MissionPlan">
                        <Grid Padding="12" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBox Text="{Binding Name, Mode=TwoWay}" FontSize="18" FontWeight="SemiBold" BorderThickness="0" Background="Transparent" />
                                <TextBox Text="{Binding MissionObjective, Mode=TwoWay}" TextWrapping="Wrap" BorderThickness="0" Background="Transparent" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Spacing="4" VerticalAlignment="Center">
                                <TextBlock Text="{Binding PlannedDate, Converter={StaticResource FormattingConverter}, ConverterParameter='MMM d, yyyy'}" />
                                <TextBlock Text="{Binding PlannedDate, Converter={StaticResource FormattingConverter}, ConverterParameter='HH:mm'}" />
                            </StackPanel>
                            <Button Grid.Column="2" Content="Delete" Command="{Binding DataContext.DeleteMissionCommand, ElementName=Page}" CommandParameter="{Binding}" VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>


