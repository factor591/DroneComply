<Page
    x:Class="DroneComply.App.Views.FlightLogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DroneComply.Core.Models"
    mc:Ignorable="d">
    <Grid Padding="24" ColumnSpacing="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Spacing="12">
            <TextBlock Text="Flight Logs" FontSize="24" FontWeight="SemiBold" />
            <TextBox PlaceholderText="Filter by Pilot Id" Text="{Binding PilotFilter, Mode=TwoWay}" />
            <Button Content="Load" Command="{Binding LoadCommand}" />
            <ListView ItemsSource="{Binding FlightLogs}" SelectedItem="{Binding SelectedFlightLog, Mode=TwoWay}" Height="520">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Padding="8" Spacing="4">
                            <TextBlock Text="{Binding FlightDate, Converter={StaticResource FormattingConverter}, ConverterParameter='g'}" FontWeight="SemiBold" />
                            <TextBlock Text="{Binding Location}" />
                            <TextBlock Text="{Binding Duration}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="12">
            <TextBlock Text="Details" FontSize="24" FontWeight="SemiBold" />

            <Grid ColumnSpacing="12" RowSpacing="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Pilot Id:" FontWeight="SemiBold" />
                <TextBlock Grid.Column="1" Text="{Binding SelectedFlightLog.PilotId}" />
                <TextBlock Grid.Row="1" Text="Aircraft Id:" FontWeight="SemiBold" />
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedFlightLog.AircraftId}" />
                <TextBlock Grid.Row="2" Text="Purpose:" FontWeight="SemiBold" />
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedFlightLog.Purpose}" />
                <TextBlock Grid.Row="3" Text="Summary:" FontWeight="SemiBold" />
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedFlightLog.MissionSummary}" TextWrapping="Wrap" />
            </Grid>

            <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" BorderThickness="1" Padding="12" CornerRadius="4">
                <StackPanel Spacing="8">
                    <TextBlock Text="Events" FontSize="20" FontWeight="SemiBold" />
                    <ListView ItemsSource="{Binding SelectedFlightLog.Events}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Padding="8" Spacing="4">
                                    <TextBlock Text="{Binding Timestamp, Converter={StaticResource FormattingConverter}, ConverterParameter='g'}" FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding EventType}" />
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Save" Command="{Binding SaveCommand}" />
                <Button Content="Delete" Command="{Binding DeleteCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>


