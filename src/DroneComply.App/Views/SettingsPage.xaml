<Page
    x:Class="DroneComply.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="Settings" FontSize="24" FontWeight="SemiBold" />

            <StackPanel>
                <TextBlock Text="Database Connection" FontWeight="SemiBold" />
                <TextBox Text="{Binding DatabaseConnection}" IsReadOnly="True" TextWrapping="Wrap" />
                <Button Content="Copy" Command="{Binding CopyConnectionStringCommand}" Width="120" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="FAA Weather Endpoint" FontWeight="SemiBold" />
                <TextBox Text="{Binding FaaWeatherEndpoint}" IsReadOnly="True" TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Aloft API Key" FontWeight="SemiBold" />
                <TextBox Text="{Binding AloftApiKey}" IsReadOnly="True" TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Google Maps API Key" FontWeight="SemiBold" />
                <TextBox Text="{Binding GoogleMapsApiKey}" IsReadOnly="True" TextWrapping="Wrap" />
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</Page>


