<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DroneComply.App.Views.PilotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DroneComply.Core.Models"
    xmlns:enums="using:DroneComply.Core.Enums"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Pilot Management" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,16"/>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <Button Content="Add Pilot" Command="{Binding AddPilotCommand}"/>
            <TextBox PlaceholderText="Search pilots..." Width="250" Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Search" Command="{Binding SearchPilotsCommand}"/>
            <TextBlock Text="{Binding StatusMessage, Mode=OneWay}" VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pilot List -->
            <ListView Grid.Column="0"
                      ItemsSource="{Binding Pilots, Mode=OneWay}"
                      SelectedItem="{Binding SelectedPilot, Mode=TwoWay}"
                      SelectionMode="Single"
                      Margin="0,0,12,0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Pilot">
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding FullName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Email}" Foreground="Gray" FontSize="12"/>
                                <TextBlock Text="{Binding CertificateNumber}" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="Green" Visibility="{Binding IsActive, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Pilot Details -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16" Visibility="{Binding SelectedPilot, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">

                    <!-- Basic Info -->
                    <TextBlock Text="Pilot Details" Style="{StaticResource SubtitleTextBlockStyle}"/>

                    <StackPanel Spacing="8">
                        <TextBox Header="First Name" Text="{Binding SelectedPilot.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Header="Last Name" Text="{Binding SelectedPilot.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Header="Email" Text="{Binding SelectedPilot.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Header="Phone Number" Text="{Binding SelectedPilot.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Header="Certificate Number" Text="{Binding SelectedPilot.CertificateNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <CalendarDatePicker Header="Certification Date" Date="{Binding SelectedPilot.CertificationDate, Mode=TwoWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}"/>
                        <ToggleSwitch Header="Active" IsOn="{Binding SelectedPilot.IsActive, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Certifications -->
                    <TextBlock Text="Certifications" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,16,0,0"/>

                    <ItemsRepeater ItemsSource="{Binding SelectedPilot.Certifications, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:PilotCertification">
                                <Border BorderBrush="Gray" BorderThickness="1" Padding="12" Margin="0,4" CornerRadius="4">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="{Binding Type}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding IssuedOn}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <!-- Actions -->
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,16,0,0">
                        <Button Content="Edit" Command="{Binding EditPilotCommand}" CommandParameter="{Binding SelectedPilot, Mode=OneWay}" Visibility="{Binding IsEditing, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        <Button Content="Save" Style="{StaticResource AccentButtonStyle}" Command="{Binding SavePilotCommand}" CommandParameter="{Binding SelectedPilot, Mode=OneWay}" Visibility="{Binding IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button Content="Cancel" Command="{Binding CancelEditCommand}" Visibility="{Binding IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button Content="Delete" Command="{Binding DeletePilotCommand}" CommandParameter="{Binding SelectedPilot, Mode=OneWay}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>



