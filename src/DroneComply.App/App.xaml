<Application
    x:Class="DroneComply.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:DroneComply.App.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <converters:FormattingConverter x:Key="FormattingConverter" />

            <!-- Missing WinUI resources -->
            <SolidColorBrush x:Key="TabViewButtonBackground" Color="Transparent" />
            <SolidColorBrush x:Key="TabViewButtonBackgroundPointerOver" Color="{ThemeResource SubtleFillColorSecondary}" />
            <SolidColorBrush x:Key="TabViewButtonBackgroundPressed" Color="{ThemeResource SubtleFillColorTertiary}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
